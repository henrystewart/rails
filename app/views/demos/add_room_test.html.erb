<h1>Add room test</h1>
<h4>A simple test that checks if your server is properly configured to dynamically create XirSys rooms</h4>

<form class="form-horizontal">
  <div class="control-group">
    <label for="room" class="control-label">Room</label>
    <div class="controls">
      <input type="text" id="room" name="room"/>
    </div>
  </div>
  <br>
  <input type="submit" value="Test" class="btn btn-primary btn-large"/>
</form>

<script type="text/javascript">
  
  $(document).ready(function() {
    // Randomize username in form
    $("#room").val(randomizeRoom());
  });
  
  // Randomizes username for form
  function randomizeRoom() {
    var room = "";
    var possible = "abcdefghijklmnopqrstuvwxyz";

    for( var i=0; i < 5; i++ )
        room += possible.charAt(Math.floor(Math.random() * possible.length));

    return room;
  }
  
</script>
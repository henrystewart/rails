<h1>One-to-one text</h1>
<h4>A simple one-to-one text demo</h4>

<% if @show_form %>
  <form class="form-horizontal">
    <div class="control-group">
      <label for="room" class="control-label">Room</label>
      <div class="controls">
        <input type="text" id="room" name="room" value="default"/>
      </div>
    </div>
    <div class="control-group">
      <label for="username" class="control-label">Username</label>
      <div class="controls">
        <input type="text" id="username" name="username" value="alex"/>
      </div>
    </div>
    <br>
    <input type="submit" value="Join" class="btn btn-primary btn-large"/>
  </form>
<% else %>
  <form class="form-horizontal">
    <div class="control-group">
      <label for="userlist" class="control-label">Connect to a user</label>
      <div class="controls">
        <select id="userlist"></select>
      </div>
    </div>
    <br>
    <button id="connect" class="btn btn-primary btn-large">Connect</button>
  </form>

  <br>

  <!-- Text chat -->
  <div id="container-text" class="text-chat">

    <div id="chatwindow-outer" class="text-chat">
      <div id="chatwindow" class="text-chat">
      </div>
    </div>
    
    <input id="message" type="text" name="input" class="text-chat"></input>
  </div>

  <script type="text/javascript">

		$(document).ready(function() {

      // initialise utilsOneToOneText object
			utilsOneToOneText.init();
      
				// success and fail handlers for users local video/audio stream allocation
				var getMediaSuccess = function (stream) {
					utilsOneToOneText.addVideo({ stream: stream, isLocalStream: true, userId: gon.username });
					utilsOneToOneText.localMediaStream( stream );
				};
				var getMediaFailed = function (err) {
					console.log('Get media stream error. ', err);
				};

				// request the local video and audio stream
				utilsOneToOneText.getUserMedia(
					{ video: true, audio: true },
					getMediaSuccess,
					getMediaFailed
				);

				// room information object / container
				var roomInfo = {
          name: gon.room
				};


				// create XirSys objects needed to initialise a room
				utilsOneToOneText.room( new xRtc.Room(roomInfo) );
      
				// assign events for updating the rooms user list
				utilsOneToOneText.room().on( xRtc.Room.events.usersUpdated, utilsOneToOneText.refreshRoom )
							.on( xRtc.Room.events.userConnected, utilsOneToOneText.refreshRoom )
							.on( xRtc.Room.events.userDisconnected, utilsOneToOneText.refreshRoom )
							.on( xRtc.Room.events.connectionDeclined, utilsOneToOneText.refreshRoom )
							// more events for accepting a call and handling connection creation
							.on( xRtc.Room.events.incomingConnection, utilsOneToOneText.acceptCall )
							.on( xRtc.Room.events.connectionCreated, utilsOneToOneText.connectionCreated );

				// map all other default events
				utilsOneToOneText.subscribe( utilsOneToOneText.room(), xRtc.Room.events );

        

				// Enter / open room
				utilsOneToOneText.room().enter(gon.username, { autoReply: false });

			/**********************************
			 *
			 *   Handles connect button click
			 *
			 **********************************/
			$("#connect").click(function (e) {
				e.preventDefault();
				// get username of remote peer
				var contact = $("#userlist").val();
				console.log('Connecting to participant...', contact);
				// connect to remote peer
        utilsOneToOneText.room().connect(contact, {});
			});
      
      // Hitting enter sends message if not empty
      $("#message").keyup(function(event){
        if(event.keyCode == 13){
          if (this.value != "") {
            utilsOneToOneText.sendMessage($("#message").val());
            this.value = "";
          }
        }
      });

		});

	</script>

<% end %>